<p id="notice"><%= notice %></p>

<h1>Cards</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Flag</th>
      <th>Bookmarkable</th>
      <th>Shareable</th>
      <th>Title</th>
      <th>Header</th>
      <th>Image</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.type %></td>
        <td><%= card.flag %></td>
        <td><%= card.bookmarkable %></td>
        <td><%= card.shareable %></td>
        <td><%= card.title %></td>
        <td><%= card.header %></td>
        <td><%= card.image %></td>
        <td><%= card.text %></td>
        <td><%= link_to 'Show', card %></td>
        <td><%= link_to 'Edit', edit_card_path(card) %></td>
        <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div><%= link_to 'New Card', new_card_path %></div>
<div><%= link_to "Create Card: Inspriation", new_card_path(card_type: :inspiration) %></div>
