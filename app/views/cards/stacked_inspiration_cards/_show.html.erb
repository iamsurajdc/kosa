
<div class="card">
  <div class="header"><%= card.header || "DEFAULT HEADER" %></div>
  <div class="stacked-image"><%= card.image_url ? image_tag(card.image_url, size: '350') : "Image Missing" %></div>
  <div class="stacked-text"><%= card.text.truncate(280) %></div>
  <div class="footer">
    <% if card.bookmarkable %>
      <div class="button">Bookmarkable</div>
    <% end %>
    <% if card.shareable %>
      <div class="button">Shareable</div>
    <% end %>
  </div>
</div>

<div class="meta">
  <%= render 'cards/publish_toggle', card: card %>
</div>
