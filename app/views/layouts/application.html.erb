<!DOCTYPE html>
<html>
  <head>
    <title>Pariyatti Library</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="user-header">
      <% if signed_in? %>
        <div class="user-email"><%= current_user.email %></div>
        <div><%= link_to "Change Password", edit_user_password_path(current_user), data: { confirm: 'Are you sure?' } %></div>
        <div><%= button_to "Sign out", sign_out_path, method: :delete %></div>
      <% else %>
        <%= link_to "Sign in", sign_in_path %>
      <% end %>
    </div>

    <div id="flash">
      <% flash.each do |key, value| %>
        <div class="flash <%= key %>"><%= value %></div>
      <% end %>
    </div>

    <%= yield %>
  </body>
</html>
